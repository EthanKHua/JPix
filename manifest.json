{
    "manifest_version": 2,
    "name": "JPix",
    "version": "1.0",

    "description": "Learn Japanese through Pixiv manga.",

    "action": {
        "default_popup": "popup/jpix.html"
    },

    "content_scripts": [
        {
            "matches": ["*://www.pixiv.net/*"],
            "js": ["jpix.js"]
        }
    ]
}